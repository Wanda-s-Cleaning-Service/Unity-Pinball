<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:paddingBottom="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/skz_tablet_wrap"
        android:weightSum="6"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_gravity="center_vertical"
        >
        <LinearLayout
            android:id="@+id/slideshow_text_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_weight="3"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/title_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lines="2"
                android:padding="16dp"
                android:text="A BRAND NEW WAY TO PLAY"
                android:textColor="@color/balance_item_white"
                android:textSize="60dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/description_text"
                android:textSize="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Skillz"
                android:textColor="@color/balance_item_white"
                android:textStyle="bold" />
        </LinearLayout>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="24dp"
            android:layout_weight="3">
            <ImageView
                android:adjustViewBounds="true"
                android:background="@drawable/skz_slideshow_image_frame"
                android:id="@+id/image_slide_image_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitStart"
                android:layout_marginTop="16dp"
                android:src="@drawable/gfx_ftue_one_2x"
                />
        </FrameLayout>
    </LinearLayout>
</FrameLayout>